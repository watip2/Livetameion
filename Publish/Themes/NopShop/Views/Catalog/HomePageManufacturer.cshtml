@model IList<ManufacturerModel>

@using Nop.Web.Models.Catalog;
@{ var counter = 1;}



@if (Model.Count > 0)
{
    <div class="brands" style="padding-top:32px">
         <div class="container">
              <div class="title-textbox">
      <div class="border-bottom"></div>
      <div class="row">
        <div class="col-md-6">
          <p class="our-title">our brands</p>
        </div>
        <div class="col-md-6">
          <p class="show-box pull-right"> @*<a href="#"><i class="fa fa-th"></i> Show all</a>*@ </p>
        </div>
      </div>
    </div>
              <div class="row">
                 
                                         
                        @foreach(var data in Model)
                        { 

                          
                               <div class="col-md-2">
                                   <div class="logo-box">  
                                    <a href=@data.SeName>
                                       <img src=@data.PictureModel.ImageUrl />
                                     </a>
                                </div>
                                </div> 
                          
                            counter++;
                            if(counter > 6)
                            {
                                counter=1;
                                <br />
                            }
                        }                      
                     
                  
              </div>
         </div>
    </div>          
}





